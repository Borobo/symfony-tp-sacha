{% extends 'base.html.twig' %}


{% block body %}
    <!-- Post Content -->
    <div class="post-preview" style="padding: 200px">
        <a href="">
            <h2 class="post-title">
                {{ article.title }}
            </h2>
            <h3 class="post-subtitle">
                {{ article.subtitle }}
            </h3>
        </a>
        <img src="{{ article.image }}" style="width: 200px">
        <p>{{ article.body }}</p>
        <p class="post-meta">Posted by
            <a href="#">{{ article.author }}</a>
            {{ article.createdAt|date("d/m/Y", "Europe/Paris") }}</p>
    </div>

    <hr>

    <div class="container">
        <div class="row">
            <h3 class="col-lg-8 col-md-10 mx-auto">{{ article.comments|length }} Comments</h3>
        </div>

        <!-- Comments Form -->
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    {{ form(commentForm) }}
